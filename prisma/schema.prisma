model Order {
  id String @id @default(uuid())

  // Relations by id
  book_id String
  user_id String

  order_date     DateTime
  delivery_date  DateTime?
  payment_method String
  comment        String?

  // Relations
  user User @relation(fields: [user_id], references: [id])
  book Book @relation(fields: [book_id], references: [id])

  // Indexes
  @@index([book_id])
  @@index([user_id])

}
